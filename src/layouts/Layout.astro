---
/**
 * Main Layout - Vibe-Engine Edition
 * Handles SEO, Google Fonts, and the Master Vibe Switch
 */
 import data from '../data/business.json';
import '../styles/vibe-system.css';

interface Props {
	title?: string;
}

// 1. Get the Vibe from business.json
// We normalize it to lowercase and replace spaces with dashes to match CSS selectors
const activeVibe = data.settings.vibe.toLowerCase().replace(/\s+/g, '-');

const { title = `${data.brand.name} | ${data.brand.tagline}` } = Astro.props;
---

<!doctype html>
<html lang="en" data-vibe={activeVibe}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={data.brand.objection_handle} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		{/* 2. Google Fonts Preconnect for Performance (100/100 Strategy) */}
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link 
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=JetBrains+Mono:ital,wght@0,400;0,800;1,800&family=Cormorant+Garamond:ital,wght@0,400;0,700;1,700&family=Outfit:wght@400;900&display=swap" 
			rel="stylesheet" 
		/>
	</head>
	<body class="bg-[var(--bg-color)] text-[var(--text-primary)] font-[var(--font-main)] selection:bg-[var(--accent)] selection:text-[var(--bg-color)]">
		<slot />
		
		<style is:global>
			/* Smooth scroll for the SPA feel */
			html {
				scroll-behavior: smooth;
			}

			/* Remove blue highlights on mobile for that "Premium" feel */
			* {
				-webkit-tap-highlight-color: transparent;
			}

			/* Hide scrollbar but allow scrolling if preferred for minimal vibes */
			/* .no-scrollbar::-webkit-scrollbar { display: none; } */
		</style>
	</body>
</html>