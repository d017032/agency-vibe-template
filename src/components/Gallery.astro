---
const { gallery } = Astro.props;
import data from '../data/business.json';

const headline = data.brand.gallery_headline || "Our Work in Action";
---

<section id="gallery" class="py-24 px-6 bg-[var(--bg-color)]">
  <div class="max-w-6xl mx-auto">
    
    <div class="mb-16">
      <span class="text-[10px] font-bold uppercase tracking-[0.4em] text-[var(--accent)] mb-4 block">// THE_VISUALS</span>
      <h2 class="text-4xl md:text-6xl font-black uppercase tracking-tighter text-[var(--text-primary)]">
        {headline}
      </h2>
    </div>

    <div class="columns-1 sm:columns-2 lg:columns-3 gap-4 space-y-4">
      {gallery && gallery.map((item: any) => (
        <div class="break-inside-avoid rounded-[var(--radius)] overflow-hidden border border-[var(--border)] group bg-[var(--border)] bg-opacity-10">
          <img 
            src={item.src} 
            alt={item.alt} 
            loading="lazy"
            class="w-full h-auto object-cover transition-all duration-500 group-hover:scale-105 group-hover:grayscale-0 grayscale-[0.5]"
          />
          {item.caption && (
            <div class="p-4 bg-[var(--bg-color)]">
              <p class="text-[10px] font-bold uppercase tracking-widest text-[var(--text-secondary)]">
                {item.caption}
              </p>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>