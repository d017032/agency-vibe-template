---
const { id, features } = Astro.props;
---
<section id={id} class="py-24 px-6 bg-[var(--bg-color)] scroll-mt-24">
  <div class="container mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      {features && features.map((feature) => (
        <div class="group border-l border-[var(--border)] pl-6 hover:border-[var(--accent)] transition-colors duration-500">
          <div class="text-[var(--accent)] text-[10px] font-mono mb-4 tracking-widest uppercase">
            // {feature.icon_slug || "SERVICE_MODULE"}
          </div>
          <h3 class="text-xl font-bold uppercase tracking-tight mb-4 text-[var(--text-primary)] group-hover:text-[var(--accent)] transition-colors">
            {feature.title}
          </h3>
          <p class="text-[var(--text-secondary)] text-sm leading-relaxed max-w-sm">
            {feature.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>