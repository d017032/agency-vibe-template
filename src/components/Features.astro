---
import data from '../data/business.json';
import { getCollection } from 'astro:content';
const services = await getCollection('services');

// Destructure features from data for easier mapping
const { features } = data;
---

<section class="py-24 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((item) => (
        <div class="p-8 rounded-[var(--radius)] border border-[var(--border)] bg-[var(--bg-color)] hover:border-[var(--accent)] transition-all group">
          <div class="w-10 h-10 mb-6 flex items-center justify-center rounded-lg bg-[var(--accent)] bg-opacity-10 text-[var(--accent)]">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover:scale-110 transition-transform"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg>
          </div>
          
          <h3 class="text-xl font-bold mb-3 text-[var(--text-primary)]">
            {item.title}
          </h3>
          
          <p class="text-[var(--text-secondary)] leading-relaxed">
            {item.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>

<section class="py-20 px-6">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
    {services.map(service => (
      <a href={`/services/${service.slug}`} class="block p-6 border border-[var(--border)] rounded-[var(--radius)] hover:border-[var(--accent)] transition-all">
        <h3 class="text-xl font-bold mb-2">{service.data.title}</h3>
        <p class="text-[var(--text-secondary)] text-sm">{service.data.description}</p>
        <span class="text-[var(--accent)] text-xs mt-4 block font-bold">Learn More â†’</span>
      </a>
    ))}
  </div>
</section>