---
const { brand, settings } = Astro.props;
---

<nav class="sticky top-0 z-[100] w-full border-b border-[var(--border)] bg-[var(--bg-color)]">
  <div class="container mx-auto px-6 py-4 flex items-center justify-between relative z-[120]">
    <a href="#top" class="text-xl font-black uppercase tracking-tighter text-[var(--text-primary)]">
      {brand.logo_text}
    </a>

    <button id="menu-toggle" class="md:hidden text-[var(--text-primary)] relative z-[130] p-2 focus:outline-none" aria-label="Toggle Menu">
      <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path id="menu-path" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8h16M4 16h16" />
      </svg>
    </button>

    <div class="hidden md:flex items-center gap-8">
      {settings.menu.map((item) => (
        <a href={item.path} class="text-xs font-bold uppercase tracking-widest text-[var(--text-secondary)] hover:text-[var(--accent)] transition-colors">
          {item.label}
        </a>
      ))}
      <a href={settings.cta_link} class="px-6 py-2 text-[10px] font-bold uppercase tracking-[0.2em] border border-[var(--accent)] text-[var(--accent)] hover:bg-[var(--accent)] hover:text-[var(--bg-color)] transition-all rounded-[var(--radius)]">
        {settings.cta_text}
      </a>
    </div>
  </div>

  <div 
    id="mobile-menu" 
    class="fixed inset-0 w-full h-screen bg-[var(--bg-color)] hidden flex-col justify-center items-center z-[110]"
  >
    <div class="absolute inset-0 bg-[var(--bg-color)] z-[-1]"></div>

    <div class="flex flex-col gap-0 text-center relative z-[125] w-full px-12">
      {settings.menu.map((item) => (
        <a 
          href={item.path} 
          class="mobile-link py-6 text-xl font-bold uppercase tracking-[0.3em] text-[var(--text-primary)] border-b border-[var(--border)] last:border-0 hover:text-[var(--accent)] transition-colors"
        >
          {item.label}
        </a>
      ))}
      
      <div class="mt-12">
        <a 
          href={settings.cta_link} 
          class="mobile-link inline-block px-10 py-5 bg-[var(--accent)] text-[var(--bg-color)] text-[10px] font-bold uppercase tracking-[0.4em] rounded-[var(--radius)] shadow-lg active:scale-95 transition-transform"
        >
          {settings.cta_text}
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const btn = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const iconPath = document.getElementById('menu-path');
  const links = document.querySelectorAll('.mobile-link');

  function toggleMenu() {
    const isHidden = menu?.classList.contains('hidden');
    
    if (isHidden) {
      menu?.classList.remove('hidden');
      menu?.classList.add('flex');
      // Adding a helper class to body to prevent scrolling background
      document.body.style.overflow = 'hidden'; 
      iconPath?.setAttribute('d', 'M6 18L18 6M6 6l12 12'); // Change icon to X
    } else {
      menu?.classList.add('hidden');
      menu?.classList.remove('flex');
      document.body.style.overflow = ''; // Restore scroll
      iconPath?.setAttribute('d', 'M4 8h16M4 16h16'); // Change icon to Hamburger
    }
  }

  btn?.addEventListener('click', toggleMenu);
  
  // Important for SPA: Close menu when a link is clicked
  links.forEach(link => {
    link.addEventListener('click', () => {
      menu?.classList.add('hidden');
      menu?.classList.remove('flex');
      document.body.style.overflow = '';
      iconPath?.setAttribute('d', 'M4 8h16M4 16h16');
    });
  });
</script>