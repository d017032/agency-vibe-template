---
import { iconLibrary } from '../lib/icons.js';
const { steps, id, brand } = Astro.props;

// Default to 'sprout' for landscaping, but AI can override in JSON
const sectionIconPath = iconLibrary[brand?.process_icon] || iconLibrary.sprout;
---

<section id={id} class="py-24 px-6 bg-[var(--bg-color)] scroll-mt-24">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-20">
      <div class="inline-flex items-center justify-center w-14 h-14 rounded-full border border-[var(--border)] mb-6 text-[var(--accent)] bg-[var(--bg-color)] feature-icon-wrapper">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d={sectionIconPath} />
        </svg>
      </div>
      
      <h2 class="text-4xl md:text-7xl font-black uppercase tracking-tighter text-[var(--text-primary)]">
        {brand?.process_headline || "How it Works"}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-20">
      {steps && steps.map((step: any, index: number) => (
        <div class="relative group">
          <div class="text-7xl md:text-8xl font-black text-[var(--accent)] opacity-10 mb-[-1.5rem] select-none group-hover:opacity-25 transition-opacity duration-500">
            0{index + 1}
          </div>
          
          <div class="relative pt-4">
            <h3 class="text-xl font-bold text-[var(--text-primary)] mb-4 uppercase tracking-tight">
              {step.title}
            </h3>
            <p class="text-[var(--text-secondary)] leading-relaxed text-sm md:text-base">
              {step.description}
            </p>
          </div>
          
          {/* Subtle connecting line for desktop */}
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute top-1/2 -right-10 w-20 border-t border-dashed border-[var(--border)] opacity-30" />
          )}
        </div>
      ))}
    </div>
  </div>
</section>