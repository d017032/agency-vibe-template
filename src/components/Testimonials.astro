---
import data from '../data/business.json';
const { testimonials } = data;
---

<section class="py-24 px-6 bg-[var(--bg-color)]">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-5xl font-bold text-center mb-16 tracking-tight">
      Trusted by Industry Leaders
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {testimonials.map((t) => (
        <div class="p-8 rounded-[var(--radius)] border border-[var(--border)] bg-[var(--bg-color)] relative overflow-hidden">
          <span class="absolute top-4 right-4 text-6xl text-[var(--accent)] opacity-10 font-serif">â€œ</span>
          
          <p class="text-lg italic text-[var(--text-secondary)] mb-8 relative z-10">
            "{t.quote}"
          </p>
          
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-[var(--accent)] flex items-center justify-center font-bold text-white shadow-lg shrink-0">
                {t.author.charAt(0).toUpperCase()}
            </div>
            <div>
                <h4 class="font-bold text-[var(--text-primary)] leading-none">{t.author}</h4>
                <p class="text-sm text-[var(--text-secondary)] mt-1">{t.role}</p>
            </div>
            </div>
        </div>
      ))}
    </div>
  </div>
</section>