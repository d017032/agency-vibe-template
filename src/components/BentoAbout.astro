---
const { brand, hero } = Astro.props;
---

<section id="about" class="py-24 px-6 bg-[var(--bg-color)]">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4 auto-rows-[200px]">
      
      <div class="md:col-span-8 md:row-span-2 p-8 md:p-12 bg-[var(--border)] bg-opacity-30 rounded-[var(--radius)] flex flex-col justify-end relative overflow-hidden group">
        <div class="relative z-10">
            <span class="text-[10px] font-bold uppercase tracking-[0.4em] text-[var(--accent)] mb-4 block">// THE_ORIGIN</span>
            <h2 class="text-3xl md:text-5xl font-black uppercase tracking-tighter text-[var(--text-primary)] mb-6 leading-none">
                {brand.name}
            </h2>
            <p class="text-[var(--text-secondary)] text-sm md:text-base leading-relaxed max-w-xl">
                {hero.subtext}
            </p>
        </div>
        <span class="absolute -bottom-10 -right-10 text-[15rem] font-black opacity-5 select-none pointer-events-none text-[var(--text-primary)]">
            {brand.name.charAt(0)}
        </span>
      </div>

      <div class="md:col-span-4 md:row-span-1 p-8 bg-[var(--accent)] text-[var(--bg-color)] rounded-[var(--radius)] flex flex-col justify-center text-center">
        <span class="text-[10px] uppercase tracking-widest font-bold opacity-80 mb-2">Our Promise</span>
        <p class="text-xl font-black uppercase tracking-tighter leading-tight">
            {brand.objection_handle}
        </p>
      </div>

      <div class="md:col-span-4 md:row-span-2 bg-[var(--border)] rounded-[var(--radius)] overflow-hidden relative">
        <img 
            src={hero.image.src} 
            alt={hero.image.alt} 
            class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700"
        />
        <div class="absolute bottom-4 left-4">
             <span class="bg-[var(--bg-color)] text-[var(--text-primary)] px-3 py-1 text-[8px] font-bold uppercase tracking-widest rounded-full">Authenticity Verified</span>
        </div>
      </div>

      <div class="md:col-span-4 md:row-span-1 border border-[var(--border)] rounded-[var(--radius)] flex items-center justify-center p-8">
        <div class="text-center">
            <p class="text-4xl font-black text-[var(--text-primary)] tracking-tighter mb-1">2026</p>
            <p class="text-[10px] uppercase tracking-widest text-[var(--text-secondary)] font-bold">Standard Set</p>
        </div>
      </div>

       <div class="md:col-span-4 md:row-span-1 border border-[var(--border)] rounded-[var(--radius)] flex flex-col justify-center p-8 bg-[var(--text-primary)] text-[var(--bg-color)]">
         <span class="text-[10px] uppercase tracking-widest font-bold opacity-50 mb-2">Availability</span>
         <p class="text-sm font-bold uppercase tracking-tight italic">Currently accepting commissions for Q3/Q4.</p>
      </div>

    </div>
  </div>
</section>