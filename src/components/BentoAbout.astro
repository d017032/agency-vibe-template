---
// Destructure the new 'about' prop
const { brand, hero, about } = Astro.props; 

const isLongHandle = brand.objection_handle?.length > 100;
---

<section id="about" class="py-24 px-6 bg-[var(--bg-color)]">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
      
      <div class="md:col-span-8 md:row-span-2 min-h-[400px] p-8 bg-[var(--border)] bg-opacity-20 rounded-[var(--radius)] flex flex-col justify-end relative border border-[var(--border)]">
        <div class="relative z-10">
            <span class="text-[10px] font-bold uppercase tracking-[0.4em] text-[var(--accent)] mb-4 block">// THE_ORIGIN</span>
            <h2 class="text-4xl md:text-6xl font-black uppercase tracking-tighter text-[var(--text-primary)] mb-6 leading-[0.9]">
                {brand.name}
            </h2>
            <p class="text-[var(--text-secondary)] text-sm md:text-base leading-relaxed max-w-xl">
                {about?.story_text}
            </p>
        </div>
      </div>

      <div class="md:col-span-4 p-8 border border-[var(--border)] rounded-[var(--radius)] flex flex-col justify-center bg-[var(--bg-color)] relative">
        <span class="text-4xl absolute top-2 left-4 text-[var(--accent)] opacity-20 font-serif">“</span>
        <p class="text-[var(--text-secondary)] text-xs italic relative z-10 pt-4">
            {about?.founder_note || "Precision in every detail."}
        </p>
        <div class="mt-4 text-[10px] font-bold uppercase tracking-widest text-[var(--text-primary)]">
            — {brand.name} Founder
        </div>
      </div>

      <div class="md:col-span-4 p-8 border border-[var(--border)] rounded-[var(--radius)] flex flex-col justify-center bg-[var(--text-primary)] text-[var(--bg-color)]">
         <div class="flex items-baseline gap-2">
            <span class="text-3xl font-black">{about?.years_experience || "10+"}</span>
            <span class="text-[10px] uppercase tracking-widest font-bold opacity-40">Years</span>
         </div>
      </div>

    </div>
  </div>
</section>