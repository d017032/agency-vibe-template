---
const { id, faqs, headline = "Common Questions" } = Astro.props;
---

<section id={id} class="py-24 px-6 bg-[var(--bg-color)] border-t border-[var(--border)] scroll-mt-24">
  <div class="container mx-auto">
    <div class="flex flex-col md:flex-row gap-12">
      
      <div class="md:w-1/3">
        <span class="text-[10px] font-bold uppercase tracking-[0.4em] text-[var(--accent)] mb-4 block">
          // KNOWLEDGE_BASE
        </span>
        <h2 class="text-4xl font-black uppercase tracking-tighter text-[var(--text-primary)] sticky top-32">
          {headline}
        </h2>
      </div>

      <div class="md:w-2/3 space-y-12">
        {faqs && faqs.map((faq) => (
          <div class="group">
            <h3 class="text-xl font-bold text-[var(--text-primary)] mb-4 flex items-start gap-4 uppercase tracking-tight">
              <span class="text-[var(--accent)] opacity-40 font-mono text-sm mt-1">Q.</span>
              {faq.question}
            </h3>
            <div class="pl-8 border-l-2 border-[var(--border)] group-hover:border-[var(--accent)] transition-colors duration-500">
              <p class="text-[var(--text-secondary)] leading-relaxed text-sm max-w-2xl">
                {faq.answer}
              </p>
            </div>
          </div>
        ))}
      </div>
      
    </div>
  </div>
</section>