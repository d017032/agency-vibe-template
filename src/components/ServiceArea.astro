---
const { data } = Astro.props;
---
<section class="py-20 bg-[var(--bg-card)] border-y border-[var(--border)]">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-4xl font-bold text-[var(--text-primary)] mb-4">{data.headline}</h2>
        <p class="text-[var(--text-secondary)] mb-8 text-lg">{data.subtext}</p>
        <div class="grid grid-cols-2 gap-4">
          {data.locations.map((place) => (
            <div class="flex items-center gap-2 text-[var(--text-primary)]">
              <span class="text-[var(--accent)]">ğŸ“</span> {place}
            </div>
          ))}
        </div>
      </div>
      <div class="bg-[var(--bg-color)] p-8 rounded-3xl border border-[var(--border)] text-center">
        <p class="text-sm uppercase tracking-widest text-[var(--text-secondary)] mb-2">Outside these areas?</p>
        <p class="text-xl font-bold mb-6">Contact us for custom quotes on distance travel.</p>
        <a href="#contact" class="px-8 py-3 bg-[var(--accent)] text-white rounded-full font-bold">Inquire Now</a>
      </div>
    </div>
  </div>
</section>