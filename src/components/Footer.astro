---
import data from '../data/business.json';
const { brand, settings, contact } = data;
const year = new Date().getFullYear();
---

<footer class="py-16 px-6 border-t border-[var(--border)] bg-[var(--bg-color)]">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 items-start">
      
      <div class="flex flex-col gap-3">
        <span class="text-xl font-black uppercase tracking-tighter text-[var(--text-primary)]">
          {brand.name}
        </span>
        <p class="text-xs uppercase tracking-widest text-[var(--text-secondary)] opacity-70">
          {brand.objection_handle}
        </p>
      </div>

      <div class="flex flex-col gap-4">
        <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-[var(--accent)]">Navigation</span>
        <div class="flex flex-col gap-2">
          {settings.menu.map((item) => (
            <a href={item.path} class="text-sm text-[var(--text-secondary)] hover:text-[var(--accent)] transition-colors uppercase tracking-widest font-medium">
              {item.label}
            </a>
          ))}
        </div>
      </div>

      <div class="flex flex-col gap-4">
         <span class="text-[10px] font-bold uppercase tracking-[0.3em] text-[var(--accent)]">Connect</span>
         <div class="text-sm text-[var(--text-secondary)] flex flex-col gap-2 uppercase tracking-tighter">
            <span>{contact.location}</span>
            <a href={`tel:${contact.phone}`} class="font-bold text-[var(--text-primary)] hover:text-[var(--accent)] transition-colors">
              {contact.phone}
            </a>
            
            {contact.email && (
              <a href={`mailto:${contact.email}`} class="lowercase tracking-normal hover:text-[var(--accent)] transition-colors opacity-80">
                {contact.email}
              </a>
            )}
         </div>
      </div>

    </div>

    <div class="mt-16 pt-8 border-t border-[var(--border)] flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="text-[10px] uppercase tracking-[0.2em] text-[var(--text-secondary)] opacity-50">
        Â© {year} {brand.name}.
      </div>
      <div class="text-[9px] font-mono uppercase tracking-[0.5em] text-[var(--accent)]">
        // Identity Engine v1.0
      </div>
    </div>
  </div>
</footer>