---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Gallery from '../components/Gallery.astro';
import Features from '../components/Features.astro';
import Process from '../components/Process.astro';
import Testimonials from '../components/Testimonials.astro';
import Comparison from '../components/Comparison.astro';
import BentoAbout from '../components/BentoAbout.astro';
import Investment from '../components/Investment.astro';
import FAQ from '../components/FAQ.astro';
import Contact from '../components/Contact.astro';
import data from '../data/business.json';
---

<Layout title={`${data.brand.name} | ${data.brand.tagline}`}>
  
  <Hero 
    brand={data.brand} 
    hero={data.hero} 
    settings={data.settings} 
  />

  <BentoAbout brand={data.brand} hero={data.hero} /> 

  <div id="comparison">
    <Comparison comparison={data.comparison} brand={data.brand} />
  </div>

  <div id="features">
    <Features features={data.features} />
  </div>

  <div id="process">
    <Process steps={data.processSteps} />
  </div>

  <div id="gallery">
    <Gallery gallery={data.gallery} />
  </div>

  <div id="testimonials">
    <Testimonials 
      testimonials={data.testimonials} 
      headline={data.brand.testimonial_headline || "What Our Clients Say"} 
    />
  </div>

  <div id="investment">
    <Investment investment={data.investment} />
  </div>

  <div id="faqs">
    <FAQ 
      faqs={data.faqs} 
      headline={data.brand.faq_headline || "Frequently Asked Questions"} 
    />
  </div>

  <Contact 
    id="contact" 
    brand={data.brand} 
    contact={data.contact} 
    settings={data.settings} 
  />

</Layout>