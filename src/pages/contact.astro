---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us">
  <main class="min-h-screen py-20 px-6">
    <div class="max-w-xl mx-auto">
      <h1 class="text-4xl font-bold mb-8 text-center">Get in Touch</h1>
      
      <form 
        name="contact" 
        method="POST" 
        data-netlify="true" 
        class="space-y-6 bg-[var(--border)] p-8 rounded-[var(--radius)]"
      >
        <div>
          <label class="block text-sm font-medium mb-2">Name</label>
          <input type="text" name="name" required class="w-full p-3 rounded-md bg-[var(--bg-color)] border border-[var(--border)] outline-none focus:ring-2 focus:ring-[var(--accent)]" />
        </div>
        <div>
          <label class="block text-sm font-medium mb-2">Email</label>
          <input type="email" name="email" required class="w-full p-3 rounded-md bg-[var(--bg-color)] border border-[var(--border)] outline-none focus:ring-2 focus:ring-[var(--accent)]" />
        </div>
        <div>
          <label class="block text-sm font-medium mb-2">Message</label>
          <textarea name="message" rows="4" required class="w-full p-3 rounded-md bg-[var(--bg-color)] border border-[var(--border)] outline-none focus:ring-2 focus:ring-[var(--accent)]"></textarea>
        </div>
        <button type="submit" class="w-full bg-[var(--accent)] text-white font-bold py-3 rounded-md hover:brightness-110 transition-all">
          Send Message
        </button>
      </form>
    </div>
  </main>
  <Footer />
</Layout>