  font-weight: 900;
  text-transform: uppercase;
  font-style: italic;
  letter-spacing: -0.05em;
}

[data-vibe="rugged-industrial"] .bg-\[var\(--accent\)\] {
  box-shadow: 4px 4px 0px 0px #ffffff;
  border: 1px solid #000000;
}

/* --- 6. MAESTRO CLASSIC (High Art/Fine Dining) --- */
[data-vibe="maestro-classic"] {
  --bg-color: #fcfcfc;
  --text-primary: #1a1a1a;
  --text-secondary: #5e5e5e;
  --accent: #8b0000;
  --border: #d1d1d1;
