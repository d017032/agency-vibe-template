@tailwind base;
@tailwind components;
@tailwind utilities;

/* --- GLOBAL SPA POLISH --- */
/* --- PERFECT SCROLL ALIGNMENT --- */
html {
  scroll-behavior: smooth;
}

/* This creates a 'buffer' at the top of every section with an ID */
section[id], main[id], div[id] {
  scroll-margin-top: 5rem; /* Matches the approximate height of your Navbar (80px) */
}

body {
  background-color: var(--bg-color);
  color: var(--text-primary);
  font-family: var(--font-main, sans-serif);
  transition: background-color 0.3s ease, color 0.3s ease;
}

/* Prevents background scroll when mobile menu is open */
body.menu-open {
  overflow: hidden !important;
}

/* --- 1. ZENITH EARTH (Organic/Wellness) --- */
[data-vibe="zenith-earth"] {
  --bg-color: #F9F7F2;
  --text-primary: #2D2926;
  --text-secondary: #6B665E;
  --accent: #7D8471;
  --border: #E5E1D8;
  --radius: 40px;
  --font-main: 'Outfit', sans-serif; 
}

[data-vibe="zenith-earth"] h1, 
[data-vibe="zenith-earth"] h2 {
  font-family: 'Fraunces', serif;
  font-weight: 300;
  text-transform: none;
}

[data-vibe="zenith-earth"] .bg-\[var\(--accent\)\] {
  border-radius: 100px;
}

/* --- 2. CLASSIC HERITAGE (Professional/Law/Luxury) --- */
[data-vibe="classic-heritage"] {
  --bg-color: #ffffff;
  --text-primary: #1a2a3a;
  --text-secondary: #5a6a7a;
  --accent: #c5a059;
  --border: #d1d5db;
  --radius: 2px;
  --font-main: 'Libre Baskerville', serif;
}

[data-vibe="classic-heritage"] h1, 
[data-vibe="classic-heritage"] h2 {
  font-weight: 700;
  letter-spacing: -0.01em;
}

/* --- 3. DARK NEO (Tech Startup/SaaS) --- */
[data-vibe="dark-neo"] {
  --bg-color: #050505;
  --text-primary: #ffffff;
  --text-secondary: #a1a1aa;
  --accent: #6366f1;
  --border: rgba(255, 255, 255, 0.08);
  --radius: 12px;
  --font-main: 'Inter', sans-serif;
}

[data-vibe="dark-neo"] h1 {
  font-weight: 800;
  letter-spacing: -0.04em;
}

[data-vibe="dark-neo"] .bg-\[var\(--accent\)\] {
  box-shadow: 0 0 25px rgba(99, 102, 241, 0.4);
}

/* --- 4. STUDIO MONO (Creative/Industrial Tech) --- */
[data-vibe="studio-mono"] {
  --bg-color: #050505;
  --text-primary: #ffffff;
  --text-secondary: #888888;
  --accent: #00f0ff;
  --border: #1a1a1a;
  --radius: 0px;
  --font-main: 'JetBrains Mono', monospace;
}

[data-vibe="studio-mono"] h1, 
[data-vibe="studio-mono"] h2 {
  font-weight: 800;
  text-transform: uppercase;
  letter-spacing: -0.04em;
}

[data-vibe="studio-mono"] .bg-\[var\(--accent\)\] {
  border: 1px solid var(--accent);
  box-shadow: 0 0 15px rgba(0, 240, 255, 0.1);
}

/* --- 5. RUGGED INDUSTRIAL (Trade Services/Gyms) --- */
[data-vibe="rugged-industrial"] {
  --bg-color: #111111;
  --text-primary: #f4f4f4;
  --text-secondary: #a1a1aa;
  --accent: #ff5f1f;
  --border: #27272a;
  --radius: 4px;
  --font-main: 'JetBrains Mono', monospace;
}

[data-vibe="rugged-industrial"] h1, 
